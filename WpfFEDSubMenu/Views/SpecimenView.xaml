        <Style x:Key="ComponentStyle" TargetType="{x:Type ItemsControl}">

            <Setter Property="ItemTemplate" Value="{StaticResource DesktopComponent_Layout}"/>
            <Setter Property="ItemsPanel" Value="{StaticResource MyItemsPanelTemplate}"/>

