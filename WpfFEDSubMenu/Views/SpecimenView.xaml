                                    ComboItemSource="{Binding dataSourceCombo}"
                                    ComboDisplayMemberPath="{Binding DisplayMemberPath}"
                                    ComboIsReadOnly ="{Binding IsReadOnly, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                    ComboWidth="{Binding WidthCombo}"
                                    DropDownClosedComponent="DropDownMessageComponent"
    
    />

            </Border>
        </DataTemplate>

